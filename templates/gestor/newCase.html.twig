{% extends 'baseGestor.html.twig' %}

{% block title %} Novo Caso {% endblock %}

{% block body %}
    <main class="col-12 col-lg-9 offset-lg-3 float-right mt-5">
        <div class="col-12 mt-3"><br></div>

        <section class="container">
            <header>
                <h1 class="text-darkblue mt-5">Novo caso <i class="fas fa-graduation-cap ml-2"></i></h1>
                <div class="bg-green w-100" style="height: 2px"></div>
                <p class="mb-5 text-darkblue"><a href="{{ path('gestor_home') }}" class="ml-1 text-decoration-none text-darkgray text-hover-green">Home >> </a><a href="{{ path('gestor_casos') }}" class="ml-1 text-decoration-none text-darkgray text-hover-green">Cases >> </a>Novo case</p>
            </header>

            <section class="container">
                <form role="form" method="post" action="{{ path('gestor_newCaso') }}" enctype="multipart/form-data">
                    <div class="col-12 col-md-12 col-lg-12">
                        <article class="form-group float-label-control">
                            <label class="text-darkblue font-weight-bold">Título</label>
                            <input type="text" name="titulo" class="form-control border border-success" placeholder="Digite o titulo do case...">

                            <label class="text-darkblue font-weight-bold mt-4">Situação</label>
                            <textarea type="text" name="descricao" class="form-control border border-success" placeholder="Descreva a sitação do case para o candidato..." rows="4"></textarea>

                            <label class="text-darkblue font-weight-bold mt-4">Vídeo Explicativo</label>
                            <input type="text" name="linkVideo" class="form-control border border-success" placeholder="Insira o link do video (youtube) que desaja apresentar...">

                            <div class="mt-3">
                                <p class="text-darkblue font-weight-bold mt-4">Imagens relacionadas</p>
                                <!--<label for="foto" class="px-3 py-2 bg-darkblue text-green rounded cursor-pointer" multiple>Adicionar Imagem</label>-->
                                <input id="foto" class="d-block mt-2" type="file" name="myFile">
                                <input id="foto" class="d-block mt-2" type="file" name="myFile">
                                <input id="foto" class="d-block mt-2" type="file" name="myFile">
                                <input id="foto" class="d-block mt-2" type="file" name="myFile">
                                <input id="foto" class="d-block mt-2" type="file" name="myFile">
                            </div>

                            <div class="mt-3">
                                <p class="text-darkblue font-weight-bold mt-4">Arquivos para Auxilio</p>
                                <!--<label for="foto" id="alterar" class="px-3 py-2 bg-darkblue text-green rounded cursor-pointer">Adicionar Arquivo</label>-->
                                <input id="foto" class="d-block mt-2" type="file" name="myFile">
                                <input id="foto" class="d-block mt-2" type="file" name="myFile">
                                <input id="foto" class="d-block mt-2" type="file" name="myFile">
                                <input id="foto" class="d-block mt-2" type="file" name="myFile">
                                <input id="foto" class="d-block mt-2" type="file" name="myFile">
                            </div>


                            <hr class="my-5">

                            <label class="text-darkblue font-weight-bold">Pergunta:</label>
                            <div class="container">
                                <textarea name="pergunta" placeholder="Faça a pergunta do Case. Tenha atenção para não gerar ambiguidade..." class="mt-3 mb-5 d-block w-100"></textarea>
                            </div>

                            <label class="text-darkblue font-weight-bold">Respostas:</label>
                            <div class="container">
                               {% for letter in 'a'..'e' %}
                                <section class="mt-2">
                                    <label class="font-weight-bold text-uppercase text-darkblue">{{ letter }}</label>
                                    <textarea name="resp_{{ letter }}" placeholder="Digite a resposta da letra {{ letter }}"
                                              class="d-block w-100"></textarea>

                                    <article class="mb-5 mt-2">
                                        <div class="card-header border font-weight-bold text-darkblue">Pontuação
                                            da resposta {{ letter }}:
                                        </div>
                                        <div class="card-body border">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="{{ letter }}_pontos"
                                                       id="radios" value="100">
                                                <label class="form-check-label text-darkblue mr-5"
                                                       for="radios">100 pontos</label>

                                                <input class="form-check-input" type="radio" name="{{ letter }}_pontos"
                                                       id="radios" value="80">
                                                <label class="form-check-label text-darkblue mr-5"
                                                       for="radios">80 pontos</label>

                                                <input class="form-check-input" type="radio" name="{{ letter }}_pontos"
                                                       id="radios" value="60">
                                                <label class="form-check-label text-darkblue mr-5"
                                                       for="radios">60 &nbsp pontos</label>

                                                <input class="form-check-input" type="radio" name="{{ letter }}_pontos"
                                                       id="radios" value="40">
                                                <label class="form-check-label text-darkblue mr-5"
                                                       for="radios">40 pontos</label>

                                                <input class="form-check-input" type="radio" name="{{ letter }}_pontos"
                                                       id="radios" value="20">
                                                <label class="form-check-label text-darkblue mr-5"
                                                       for="radios">20 &nbsp pontos</label>
                                            </div>
                                        </div>
                                    </article>
                                </section>
                                {% endfor %}
                                <p class="text-darkblue font-weight-bold mt-5">Feedback para esta questão:</p>
                                <textarea name="feedback" placeholder="Deixe um feedback para o candidato." class="w-100"></textarea>
                            </div>

                            <hr class="col-12 col-sm-12 col-lg-12 mt-5">

                            <div class="col-10 col-lg-5 mx-auto">
                                <input type="submit" name="criarCase" value="Criar Case" class="btn bg-green btn-lg text-darkblue font-weight-bold w-100">
                            </div>
                        </article>
                    </div>
                </form>
            </section>

            <div class="bg-green w-100 mt-5" style="height: 2px"></div>
            <footer class="col-1 mx-auto my-3">
                <img src="/img/logo-Bayer.png" width="70">
            </footer>
        </section>
    </main>
{% endblock %}