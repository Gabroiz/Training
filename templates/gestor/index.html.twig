{% extends 'baseGestor.html.twig' %}

{% block title %} Painel do Gestor{% endblock %}

{% block body %}
    <main class="col-12 col-lg-9 offset-lg-3 float-right mt-5">
        <div class="col-12 mt-3"><br></div>

        <div class="col-12 mt-3"><br></div>
        <div class="col-12 mt-3"><br></div>
        <div class="col-lg-12 col-xl-10 mx-auto mt-5 text-center">
            <h1 class="text-darkblue pt-5">Seja bem vindo ao portal Bayer Training!</h1>
